{
  "id": "grime",
  "label": "Grime",
  "stage": "effect",
  "shader": {
    "entryPoint": "main",
    "url": "/shaders/effects/grime/grime.wgsl"
  },
  "resources": {
    "input_texture": {
      "kind": "sampledTexture",
      "format": "rgba32float"
    },
    "output_buffer": {
      "kind": "storageBuffer",
      "size": "pixel-f32x4"
    },
    "params": {
      "kind": "uniformBuffer",
      "size": 32
    }
  },
  "parameters": [
    {
      "name": "enabled",
      "type": "boolean",
      "default": true,
      "label": "Enabled",
      "description": "Toggle grime effect on or off."
    },
    {
      "name": "strength",
      "type": "number",
      "default": 1.0,
      "min": 0.0,
      "max": 5.0,
      "step": 0.1,
      "label": "Strength",
      "description": "Overall effect strength multiplier (1.0 = Python reference)"
    },
    {
      "name": "debug_mode",
      "type": "number",
      "default": 0.0,
      "min": 0.0,
      "max": 4.0,
      "step": 1.0,
      "label": "Debug Mode",
      "description": "0=normal, 1=mask, 2=dusty, 3=specks, 4=sparse"
    }
  ],
  "parameterBindings": {
    "width": {
      "buffer": "params",
      "offset": 0
    },
    "height": {
      "buffer": "params",
      "offset": 1
    },
    "channels": {
      "buffer": "params",
      "offset": 2
    },
    "time": {
      "buffer": "params",
      "offset": 4
    },
    "speed": {
      "buffer": "params",
      "offset": 5
    },
    "strength": {
      "buffer": "params",
      "offset": 6
    },
    "debug_mode": {
      "buffer": "params",
      "offset": 7
    }
  }
}
