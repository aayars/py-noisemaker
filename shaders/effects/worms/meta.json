{
  "id": "worms",
  "label": "Worms",
  "stage": "effect",
  "shader": {
    "entryPoint": "main",
    "url": "/shaders/effects/worms/worms.wgsl"
  },
  "resources": {
    "input_texture": {
      "kind": "sampledTexture",
      "format": "rgba32float"
    },
    "output_buffer": {
      "kind": "storageBuffer",
      "size": "pixel-f32x4"
    },
    "params": {
      "kind": "uniformBuffer",
      "size": 80
    },
    "prev_texture": {
      "kind": "sampledTexture",
      "format": "rgba16float",
      "persistent": true
    },
    "agent_state_in": {
      "kind": "readOnlyStorageBuffer",
      "size": "custom",
      "persistent": true
    },
    "agent_state_out": {
      "kind": "storageBuffer",
      "size": "custom",
      "persistent": true
    }
  },
  "temporal": {
    "enabled": true,
    "feedback": "prev_texture",
    "agentBuffers": ["agent_state_in", "agent_state_out"]
  },
  "parameters": [
    {
      "name": "enabled",
      "type": "boolean",
      "default": true,
      "label": "Enabled",
      "description": "Toggle the worms effect on or off."
    },
    {
      "name": "behavior",
      "type": "integer",
      "default": 1,
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "Behavior",
      "description": "Worm behavior pattern."
    },
    {
      "name": "density",
      "type": "integer",
      "default": 20,
      "min": 1,
      "max": 100,
      "step": 1,
      "label": "Density",
      "description": "Number of agents relative to frame size."
    },
    {
      "name": "stride",
      "type": "integer",
      "default": 10,
      "min": 1,
      "max": 100,
      "step": 1,
      "label": "Stride",
      "description": "Agent step length control."
    },
    {
      "name": "kink",
      "type": "float",
      "default": 1.0,
      "min": 0.0,
      "max": 10.0,
      "step": 0.1,
      "label": "Kink",
      "description": "Controls heading influence from the flow field."
    },
    {
      "name": "strideDeviation",
      "type": "float",
      "default": 0.05,
      "min": 0.0,
      "max": 0.5,
      "step": 0.01,
      "label": "Stride Deviation",
      "description": "Variation in stride applied per agent."
    },
    {
      "name": "quantize",
      "type": "boolean",
      "default": false,
      "label": "Quantize",
      "description": "Snap worm headings to discrete steps."
    },
    {
      "name": "intensity",
      "type": "float",
      "default": 90,
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Trail Intensity",
      "description": "Fade applied to feedback accumulation (percent)."
    },
    {
      "name": "inputIntensity",
      "type": "float",
      "default": 100,
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Input Intensity",
      "description": "Strength of the source texture in the final blend (percent)."
    },
    {
      "name": "lifetime",
      "type": "float",
      "default": 30,
      "min": 0,
      "max": 60,
      "step": 1,
      "label": "Lifetime",
      "description": "Seconds before agents respawn; 0 keeps trails permanent."
    }
  ],
  "parameterBindings": {
    "behavior": "params.behavior_density_stride_padding.x",
    "density": "params.behavior_density_stride_padding.y",
    "stride": "params.behavior_density_stride_padding.z",
    "strideDeviation": "params.stride_deviation_alpha_kink.x",
    "kink": "params.stride_deviation_alpha_kink.z",
    "quantize": "params.quantize_time_padding_intensity.x",
    "intensity": "params.quantize_time_padding_intensity.w",
    "inputIntensity": "params.inputIntensity_lifetime_padding.x",
    "lifetime": "params.inputIntensity_lifetime_padding.y"
  }
}
