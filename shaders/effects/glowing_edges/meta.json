{
  "id": "glowing_edges",
  "label": "Glowing Edges",
  "stage": "effect",
  "shader": {
    "entryPoint": "main",
    "url": "/shaders/effects/glowing_edges/glowing_edges.wgsl"
  },
  "resources": {
    "input_texture": { "kind": "sampledTexture", "format": "rgba32float" },
    "output_buffer": { "kind": "storageBuffer", "size": "pixel-f32x4" },
    "params": { "kind": "uniformBuffer", "size": 32 },
    "aux_texture": { "kind": "sampledTexture", "format": "rgba32float" }
  },
  "parameters": [
    {
      "name": "enabled",
      "type": "boolean",
      "default": true,
      "label": "Enabled",
      "description": "Toggle the glowing edges effect."
    },
    {
      "name": "sobel_metric",
      "type": "enum",
      "default": 1,
      "label": "Sobel Metric",
      "description": "Distance metric for Sobel operator magnitude.",
      "options": [
        { "value": 1, "label": "Euclidean" },
        { "value": 2, "label": "Manhattan" },
        { "value": 3, "label": "Chebyshev" },
        { "value": 4, "label": "Octagram" },
        { "value": 101, "label": "Triangular" },
        { "value": 102, "label": "Hexagram" },
        { "value": 201, "label": "SDF" }
      ]
    },
    {
      "name": "alpha",
      "type": "float",
      "default": 1.0,
      "min": 0,
      "max": 1,
      "step": 0.05,
      "label": "Alpha",
      "description": "Blend weight for the glowing edges over the source image."
    }
  ],
  "parameterBindings": {
    "width": { "buffer": "params", "offset": 0 },
    "height": { "buffer": "params", "offset": 1 },
    "channel_count": { "buffer": "params", "offset": 2 },
    "alpha": { "buffer": "params", "offset": 3 },
    "sobel_metric": { "buffer": "params", "offset": 4 },
    "time": { "buffer": "params", "offset": 6 },
    "speed": { "buffer": "params", "offset": 7 },
    "enabled": { "kind": "toggle" }
  }
}
