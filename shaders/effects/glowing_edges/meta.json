{
  "id": "glowing_edges",
  "label": "Glowing Edges",
  "stage": "compute",
  "entryPoint": "main",
  "shader": { "url": "/shaders/effects/glowing_edges/glowing_edges.wgsl", "entryPoint": "main" },
  "resources": {
    "input_texture": { "kind": "sampledTexture", "format": "rgba32float" },
    "output_buffer": { "kind": "storageBuffer", "size": "pixel-f32x4" },
    "params": { "kind": "uniformBuffer", "size": 32 },
    "temp_buffer": { "kind": "storageBuffer", "size": "pixel-f32x4" }
  },
  "parameters": [
    { "name": "enabled", "type": "boolean", "default": true, "label": "Enabled" },
    {
      "name": "sobel_metric",
      "type": "enum",
      "default": 2,
      "label": "Sobel Metric",
      "options": [
        { "value": 1, "label": "Euclidean" },
        { "value": 2, "label": "Manhattan" },
        { "value": 3, "label": "Chebyshev" },
        { "value": 4, "label": "Octagram" },
        { "value": 101, "label": "Triangular" },
        { "value": 102, "label": "Hexagram" },
        { "value": 201, "label": "SDF" }
      ]
    },
    { "name": "alpha", "type": "float", "default": 1.0, "min": 0.0, "max": 1.0, "step": 0.01, "label": "Alpha" }
  ],
  "parameterBindings": {
    "width": { "buffer": "params", "offset": 0 },
    "height": { "buffer": "params", "offset": 1 },
    "channels": { "buffer": "params", "offset": 2 },
    "sobel_metric": { "buffer": "params", "offset": 4 },
    "alpha": { "buffer": "params", "offset": 5 },
    "time": { "buffer": "params", "offset": 6 },
    "speed": { "buffer": "params", "offset": 7 }
  }
}
