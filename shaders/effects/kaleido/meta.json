{
  "id": "kaleido",
  "label": "Kaleido",
  "stage": "effect",
  "shader": {
    "entryPoint": "main",
    "url": "/shaders/effects/kaleido/kaleido.wgsl"
  },
  "resources": {
    "input_texture": { "kind": "sampledTexture", "format": "rgba32float" },
    "output_buffer": { "kind": "storageBuffer", "size": "pixel-f32x4" },
    "params": { "kind": "uniformBuffer", "size": 32 },
    "radius_texture": { "kind": "sampledTexture", "format": "rgba32float" }
  },
  "parameters": [
    {
      "name": "enabled",
      "type": "boolean",
      "default": true,
      "label": "Enabled",
      "description": "Toggle kaleidoscope effect on or off."
    },
    {
      "name": "sides",
      "type": "int",
      "default": 6,
      "min": 2,
      "max": 32,
      "step": 1,
      "label": "Sides",
      "description": "Number of kaleidoscope wedges."
    },
    {
      "name": "sdf_sides",
      "type": "int",
      "default": 5,
      "min": 0,
      "max": 12,
      "step": 1,
      "label": "SDF Sides",
      "description": "Polygon sides for SDF distance metric (0-2 uses Euclidean)."
    },
    {
      "name": "blend_edges",
      "type": "boolean",
      "default": true,
      "label": "Blend Edges",
      "description": "Fade to original image at edges."
    },
    {
      "name": "point_freq",
      "type": "int",
      "default": 1,
      "min": 1,
      "max": 32,
      "step": 1,
      "label": "Point Frequency",
      "description": "Number of Voronoi points per axis."
    },
    {
      "name": "point_generations",
      "type": "int",
      "default": 1,
      "min": 1,
      "max": 5,
      "step": 1,
      "label": "Generations",
      "description": "Voronoi point cloud generations to accumulate."
    },
    {
      "name": "point_distrib",
      "type": "enum",
      "default": 0,
      "label": "Distribution",
      "description": "Voronoi point distribution pattern.",
      "options": [
        { "value": 0, "label": "Random" },
        { "value": 1, "label": "Square" },
        { "value": 2, "label": "Waffle" },
        { "value": 3, "label": "Chess" },
        { "value": 4, "label": "Hex (H)" },
        { "value": 5, "label": "Hex (V)" },
        { "value": 6, "label": "Spiral" },
        { "value": 7, "label": "Circular" },
        { "value": 8, "label": "Concentric" },
        { "value": 9, "label": "Rotating" }
      ]
    },
    {
      "name": "point_drift",
      "type": "float",
      "default": 0.0,
      "min": 0.0,
      "max": 1.0,
      "step": 0.01,
      "label": "Point Drift",
      "description": "Random drift applied to Voronoi points."
    },
    {
      "name": "point_corners",
      "type": "boolean",
      "default": false,
      "label": "Include Corners",
      "description": "Include corner points for grid distributions."
    },
    {
      "name": "speed",
      "type": "float",
      "default": 1.0,
      "min": 0.0,
      "max": 5.0,
      "step": 0.1,
      "label": "Speed",
      "description": "Animation speed multiplier for Voronoi drift."
    }
  ],
  "parameterBindings": {
    "width": { "buffer": "params", "offset": 0 },
    "height": { "buffer": "params", "offset": 1 },
    "channel_count": { "buffer": "params", "offset": 2 },
    "sides": { "buffer": "params", "offset": 3 },
    "sdf_sides": { "buffer": "params", "offset": 4 },
    "blend_edges": { "buffer": "params", "offset": 5 },
    "time": { "buffer": "params", "offset": 6 },
    "speed": { "buffer": "params", "offset": 7 },
    "enabled": { "kind": "toggle" }
  }
}
